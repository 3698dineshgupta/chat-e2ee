{
  "name": "chat-e2ee",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end encrypted chat application",
  "license": "ISC",

  "scripts": {
    "dev": "concurrently \"npm run client\" \"npm run server\"",

    "client": "cd client && npm run dev",

    "server": "cross-env NODE_ENV=development nodemon --watch \"./**\" --ext \"ts,json\" --ignore \"./client\" --ignore \"./service\" --exec \"ts-node index.ts\"",

    "build-client": "cd client && npm run build",

    "build": "tsc && npm run build-client",

    "start": "node dist/index.js",

    "test": "cross-env NODE_ENV=test jest"
  },

  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "form-data": "^4.0.0",
    "mongodb": "^6.9.0",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.8.0",
    "uuid": "^10.0.0"
  },

  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.6.1",
    "@types/node-fetch": "^2.6.11",
    "@types/socket.io": "^3.0.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
