{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "node_modules"]
}
